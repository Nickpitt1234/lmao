<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity2"
    android:padding="16dp">

    <TextView
        android:id="@+id/primeira_pergunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="37dp"
        android:text="Primeira pergunta..."
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/texto_pergunta1"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="203dp"
        android:text="Entre essas quatro imagens, quem eh literamente voce?"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/joker"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="288dp"
        android:src="@drawable/eu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/mariana"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="408dp"
        android:src="@drawable/mariana"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/confirma_dois"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="228dp"
        android:layout_marginTop="468dp"
        android:text="Confirma"
        android:textSize="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="228dp"
        android:layout_marginTop="540dp"
        android:max="3"
        android:progress="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/progresso2"
        android:layout_width="24dp"
        android:layout_height="29dp"
        android:layout_marginStart="285dp"
        android:layout_marginTop="576dp"
        android:text="1/3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:layout_width="100dp"
        android:layout_height="400dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="292dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/b_joker"
            android:layout_width="wrap_content"
            android:layout_height="100dp" />

        <RadioButton
            android:id="@+id/b_harley"
            android:layout_width="wrap_content"
            android:layout_height="100dp" />

        <RadioButton
            android:id="@+id/b_bill"
            android:layout_width="wrap_content"
            android:layout_height="100dp" />

        <RadioButton
            android:id="@+id/b_ryan"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
         />

    </RadioGroup>

    <ImageView
        android:id="@+id/bill"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="516dp"
        android:src="@drawable/bill"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ryan"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="620dp"
        android:src="@drawable/ryan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>